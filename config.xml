<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.dedal.takedaHbA1c"
        version     = "0.0.1" >
		
		

    <name>HbA1c kalkulator</name>

    <description>
      HbA1c kalkulator by Takeda
    </description>

    <author href="https://dedal.hr" email="info@dedal.hr">
        Jurica Starešinčić
    </author>
	
	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<allow-navigation href="*" />
	<allow-intent href="*" />
	<access origin="*" />
	<plugin name="cordova-plugin-splashscreen" source="npm" />
	
	<platform name="android">
		<splash src="splash.png" width="750" height="1334" />
		<preference name="SplashMaintainAspectRatio" value="true" />
		<preference name="SplashScreenBackgroundColor" value="white" />
	</platform>
	<platform name="ios">
		<splash src="res/screen/ios/Default@2x~universal~anyany.png" />
	</platform>
	
	<preference name="orientation" value="portrait" />
	
	
	<icon src="icon.png" />
	
	<preference name="android-build-tool" value="gradle" />
	
	
	

</widget>